@using sopman.Data
@model RegisterJobTitleViewModel
@{
    ViewData["Title"] = "Register Job Title";
    List<SelectListItem> items = new List<SelectListItem>();
     items.Add(new SelectListItem { Text = "Option1", Value = "Option1"});
     items.Add(new SelectListItem { Text = "Option2", Value = "Option2" });
     items.Add(new SelectListItem { Text = "Option3", Value = "Option3", Selected = true });
}
<div class="container register-div">
    <div class="row">
        <div class="col-12">
            <h1>@ViewData["Title"]</h1>
            <p>@ViewData["test"]</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @using (Html.BeginForm("RegisterJobTitle", "Account", FormMethod.Post, 
            new { @class = "form-horizontal dep-form col-12 col-md-8", role = "form" }))
            {
            @Html.AntiForgeryToken()
            <div class="form-group row">
                <div class="col-12">
                    <div class="row">
                         <div class="col-12">
                            @Html.LabelFor(m => m.JobTitle, new { @class = "col-md-12 control-label" })
                         </div>
                        <div class="col-12 col-md-6 no-pad-left">
                            @Html.TextBoxFor(m => m.JobTitle, new { @class = "form-control" })
                        </div>
                        <div class="col-12 col-md-6">
                            <button type="button" class="btn btn-secondary small-tooltip builder-tooltip" data-toggle="tooltip" data-placement="right" title="Enter the job title">
                                <i class="material-icons">help</i>
                            </button>
                        </div>
                        <div class="col-12 col-md-6 drop-list no-pad-left">
                            @Html.DropDownListFor(m => m.DepartmentId,
                         new SelectList(Model.Departments, "DepartmentId", "DepartmentName"), "Select Department", new { @class = "form-control" })
                        </div>
                        <div class="col-12 col-md-6">
                            <button type="button" class="btn btn-secondary job-tooltip builder-tooltip" data-toggle="tooltip" data-placement="right" title="Link the job to a department">
                                <i class="material-icons">help</i>
                            </button>
                        </div>
                      </div>  
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 col-md-12 no-pad-left">
                    <input type="submit" class="btn btn-default" value="Add Job" />
                </div>
            </div>
            }
        </div>
    </div>
</div>
