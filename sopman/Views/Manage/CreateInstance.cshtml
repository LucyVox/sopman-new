@model sopman.Models.ManageViewModels.CreateInstanceViewModel
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Create New Instance";
    var sub = "InstanceProcess?="+@ViewBag.theid;
}
<div class="container body-content">
    <div class="container sop-builder">
        @using(Html.BeginForm()) {
            <input type='hidden' name="SOPTemplateID" value="@ViewBag.theid">
            <div class="row header-white">
                <div class="col-12">
                    <h1>@Html.DisplayFor(model => model.TempName)</h1>
                </div>
                <div class="col-12">
                    <div class="row">
                        <div class="col-12">
                            <label>Instance Reference</label>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.TextBoxFor(m => m.InstanceRef, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row pad-top">
                        <div class="col-12">
                            <label>Project</label>
                        </div>
                        <div class="col-12 col-md-5">
                            @Html.DropDownList("ProjectDropdown",ViewBag.selectlist as SelectList, "-- Select Project --" , new { @class = "form-control" })
                        </div>
                        <div class="col-12 col-md-7"> </div>
                        <div class="col-12 col-md-6 pad-top">
                            @Html.TextBoxFor(m => m.ProjectName, new { @class = "form-control", @placeholder = "Add project name" })
                        </div>
                    </div>
                    <div class="row pad-top">
                        <div class="col-12">
                            <label>Expiry Date</label>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.EditorFor(m => m.InstanceExpire, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group bottom-row submit-row">
                        <div class="col-12 float-to-right">
                            <input type="submit" class="btn btn-default" value="save and continue" />
                        </div>
                    </div>
                </div>
            </div>  
        }
    </div>
</div>
@section Scripts {
<script>

    
</script>
}
