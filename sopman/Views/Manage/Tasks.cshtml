                </div>
            </div>
        </div>
    </div>
</div>  
<script>
    $(document).ready(function() {
        $('#tasks-table').DataTable( {
            "order": [[ 0, "desc" ]],
            "paging": false,
            "info": false,
            "columnDefs": [
                { "orderable": false, "targets": 4 }
            ]
        });
     });
    $(document).ready(function() {
        $( ".im-responsive" ).click(function() {
            $("tr.tablerow").not(".res-user").hide();
        });
        $( ".im-accountable" ).click(function() {
            $("tr.tablerow").not(".acc-user").hide();
        });
        $( ".im-consulting" ).click(function() {
            $("tr.tablerow").not(".con-user").hide();
        });
        $( ".im-informed" ).click(function() {
