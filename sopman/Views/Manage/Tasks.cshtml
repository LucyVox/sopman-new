@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "My Tasks";
}
<div class="container body-content">
    <div class="container sop-builder">
        <div class="row header-dark-grey pb-4">
            <div class="dropdown ml-3">
                <button class="btn btn-secondary d-flex" type="button" id="active" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Active<i class="material-icons ml-5">menu</i>
                </button>
                <div class="dropdown-menu" aria-labelledby="active">
                    <a class="dropdown-item show-all-sop" href="#">All</a>                
                    <a class="dropdown-item im-responsive" href="#">I am responsible</a>
                    <a class="dropdown-item im-accountable" href="#">I am accountable</a>
                    <a class="dropdown-item im-consulting" href="#">I am consulting</a>
                    <a class="dropdown-item im-informed" href="#">I am informed</a>
                </div>
            </div>
            <div class="dropdown ml-3">
                <button class="btn btn-secondary d-flex" type="button" id="active" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Status<i class="material-icons ml-5">menu</i>
                </button>
                <div class="dropdown-menu" aria-labelledby="active">
                    <a class="dropdown-item status-all" href="#">All</a>                
                    <a class="dropdown-item is-complete" href="#">Complete</a>
                    <a class="dropdown-item is-pending" href="#">Pending</a>
                    <a class="dropdown-item is-recused" href="#">Recused</a>
                </div>
            </div>
        </div>
        <div class="row header-white">
            <div class="col-12">
                <div class="row">
                    <div class="col-12 col-md-4">
                    </div>
                    <div class="col-12">
                        <table id="tasks-table" class="table list-table">
                            <thead>
                                <tr>
                                    <th>Instance</th>
                                    <th>Project</th>
                                    <th>Process Step</th>
                                    <th>Due Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody> 
                            @foreach(var res in (ViewBag.racirespro)){
                                if(res.UserId == (ViewBag.getuserid)){
                                    <tr class="res-user status-@res.Status tablerow">
                                        @foreach(var inst in (ViewBag.getinstances)){
                                            if(inst.InstanceId == res.InstanceId){
                                                foreach(var exe in (ViewBag.exesop)){
                                                    if(exe.SectionId == inst.InstanceId){
                                                        <td><a href="/Manage/SOPs?=@exe.ExecuteSopID">@inst.InstanceRef</a></td>
                                                    }
                                                }
                                            }
                                        }
                                        @foreach(var proj in (ViewBag.getinstances)){
                                            if(proj.InstanceId == res.InstanceId){
                                                foreach(var project in (ViewBag.projects)){
                                                    if(proj.ProjectId == project.ProjectId){
                                                        <td><a href="/Manage/ViewProject?=@proj.ProjectId">@project.Projectname</a></td>
                                                    }
                                                }

                                            }
                                        }
                                        @foreach(var inst in (ViewBag.getinstances)){
                                            if(inst.InstanceId == res.InstanceId){
                                                foreach(var item in (ViewBag.processSteps)){
                                                    if(res.soptoptempid == item.SOPTemplateID){
                                                        foreach(var exe in (ViewBag.exesop)){
                                                            if((exe.SectionId == inst.InstanceId) && (res.valuematch == item.valuematch)){
                                                                <td><a href="/Manage/SOPs?=@exe.ExecuteSopID">@item.ProcessName</a></td>
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                        @foreach(var inst in (ViewBag.getinstances)){
                                            if(inst.InstanceId == res.InstanceId){
                                                <td>@inst.ExpireDate</td>
                                            }
                                        }
                                        <td>@res.Status</td>
                                    </tr>
                                }
                            }
