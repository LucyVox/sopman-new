        });
        $( ".show-all-sop" ).click(function() {
            $("tr.tablerow").show();
        });
        $( ".is-complete" ).click(function() {
            $("tr.tablerow").not(".status-Complete").hide();
        });
        $( ".is-pending" ).click(function() {
            $("tr.tablerow").not(".status-Pending").hide();
        });
        $( ".is-recused" ).click(function() {
