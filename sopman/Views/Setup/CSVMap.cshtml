@{
    var rows = @ViewBag.Rows;
    int failed = @ViewBag.Failed;
    string file = @ViewBag.File;
}
<div class="container py-3">
    @if(failed > 0){
        <div class="alert alert-danger" role="alert">
            <b>Warning!</b>&nbsp;Number of failed records: @failed. Make sure all fields are populated.
        </div>
    }
    <div class="row my-3">

        <div class="col-12 d-flex flex-row-reverse">
            <form>
                @Html.ActionLink("Proceed", 
                        "SubmitCSV",   //
                        "Setup",
                        new { file = @file },

                        new { @class = "btn btn-secondary" }
                        )
                @Html.ActionLink("Cancel", 
                        "OrgStructure",   //
                        "Setup",
                        null,
                        new { @class = "btn btn-danger" }
                        )
            </form>
        </div>
    </div>
    <h2 class="h6"><b>Data Preview:</b></h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">First Name</th>
                <th scope="col">Second Name</th>
                <th scope="col">Department</th>
                <th scope="col">Job Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var row in rows)
            {
                <tr>
                    <td>@row.Email</td>
                    <td>@row.FirstName</td>
                    <td>@row.SecondName</td>
                    <td>@row.Department</td>
                    <td>@row.JobTitle</td>
                </tr>
            }
            </tbody>
    </table>

</div>